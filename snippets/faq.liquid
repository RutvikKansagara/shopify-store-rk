<div class="faq-accordion">
  {% for faq in shop.metaobjects.faq.values %}
    <div class="faq-item">
      <div class="faq-question">
        <strong>{{ faq.question }}</strong>
      </div>
      <div class="faq-answer">
        {{ faq.answer }}
      </div>
    </div>
  {% endfor %}
</div>

<style>
  .faq-item {
    margin-bottom: 10px;
  }
  .faq-question {
    font-weight: bold;
    margin-bottom: 5px;
  }
  .faq-answer {
    margin-top: 5px;
  }
</style>
