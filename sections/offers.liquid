<!-- sections/offers.liquid -->

<div class="container mt-5">
  <div class="row">
    <div class="col-md-12">
      <div class="offers-section">
        <h2>{{ section.settings.title }}</h2>
        
        {% for offer in section.blocks %}
          <div class="card mb-4">
            <div class="card-body">
              <h5 class="card-title">{{ offer.settings.offer_name }}</h5>
              <p class="card-text"><strong>Discount Code:</strong> {{ offer.settings.discount_code }}</p>
              <p class="card-text"><strong>Offer Description:</strong> {{ offer.settings.offer_description }}</p>
            </div>
          </div>
        {% endfor %}
      
      </div>
    </div>
  </div>
</div>



{% schema %}
    {
      "name": "Offers",
      "settings": [
        {
          "type": "text",
          "label": "Title",
          "id": "title"
        }
      ],
      "blocks": [
        {
          "type": "offer",
          "name": "Offer",
          "settings": [
            {
              "type": "text",
              "label": "Offer Name",
              "id": "offer_name"
            },
            {
              "type": "text",
              "label": "Discount Code",
              "id": "discount_code"
            },
            {
              "type": "textarea",
              "label": "Offer Description",
              "id": "offer_description"
            }
          ]
        }
      ],
      "presets": [
        {
          "category": "Custom",
          "name": "Offers"
        }
      ]
    }
    {% endschema %}
    